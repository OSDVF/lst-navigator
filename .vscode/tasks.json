{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create a deployment",
            "command": "gh",
            "type": "shell",
            "args": [
                "api",
                "--method",
                "POST",
                "-H",
                "Accept: application/vnd.github+json",
                "-H",
                "X-GitHub-Api-Version: 2022-11-28",
                "/repos/OSDVF/lst-navigator/deployments",
                "-f",
                "ref=\"main\"",
                "-f",
                "\"required_contexts[]\"",
                "-f",
                "\"environment=live\"",
                "-f",
                "payload='{ \"deploy\": \"migrate\" }'",
                "-f",
                "description='Deploy request from dev machine'"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        }
    ]
}