{
    "[typescript]": {
        "foldEnd": "/* #endregion */",
        "foldEndRegex": "/\\*[\\s]*#endregion",
        "foldStart": "/* #region [NAME] */",
        "foldStartRegex": "^[\\s]*/\\*[\\s]*#region[\\s]*(.*)[\\s]*\\*/[\\s]*$",
        "defaultFoldStartRegex": "^[\\s]*/\\*[\\s]*#region[\\s]*default\\s(.*)[\\s]*\\*/[\\s]*$",
        "foldDefinitions": [
            {
                "foldEndRegex": "\\*+/[\\s]*$",
                "foldStartRegex": "^[\\s]*/\\*\\*+",
                "isFoldedByDefault": true
            }
        ]
    },
    "cSpell.enableFiletypes": [
        "!javascript",
        "!javascriptreact",
        "!json",
        "!jsonc",
        "!typescript",
        "!vue"
    ],
    "typescript.tsdk": "node_modules/typescript/lib",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.nuxt": true,
        "**/.firebase": true,
        "**/.output": true,
        "**/__": true
    },
    "npm.packageManager": "npm",
    "eslint.useFlatConfig": true,
    "bun.debugTerminal.enabled": false,
    "spellright.language": [
        "Czech"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ]
}