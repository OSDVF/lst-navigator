rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    match /{document=**}/feedback {
			allow read: if true;
      allow write: if true;
    }
    match /{document=**}/notes {
			allow read: if true;
      allow write: if true;
    }
    match /{document=**}/subscriptions {
			allow read: if true;
      allow write: if true;
    }
    match /users {
      function isSuperAdmin() {
				return get(/databases/$(database)/documents/users/$(request.auth.uid)/permissions/superAdmin) == true;
      }
			match /{userId} {
      	allow read: if isSignedIn();
        allow write: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
      }
      allow read: if isSignedIn();
      allow write: if false;
    }
    match /{document=*}/{subdoc=**} {
      allow read: if exists(/databases/$(database)/documents/events/$(document));
      allow write: if false;
    }
    match /events/{document=**} {
    	allow read: if true;
    }
  }
}