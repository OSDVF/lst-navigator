rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  	match /suggestions/{event} {
    	allow read,write: if true;
    }
    function isSignedIn() {
      return request.auth != null;
    }
    function isSuperAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.get('superAdmin', false) == true;
    }
    function isEventAdmin(event) {
      return isSuperAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.get(event, 0) >= 1;
    }
    match /users {
			match /{userId}/{field=**} {
      	allow read: if isSignedIn();
        allow write: if (isSignedIn() && request.auth.uid == userId && request.resource.data.permissions.get('superAdmin', false) == false) || isSuperAdmin();
      }
      allow read: if isSignedIn();
      allow write: if false;
    }
    match /events/{event} {
      allow read: if true;
      allow update: if isEventAdmin(event);
      allow create, delete: if isSuperAdmin();
      
      match /{eventData} {
        allow create, delete: if isSuperAdmin();
      }
    
      match /feedback/{sectionId} {
        allow read: if true;
        allow write: if true;
      }
      match /feedbackConfig/{sectionIndex} {
        allow read: if true;
        allow write: if isEventAdmin(event);
      }
      match /notes/{sessionId} {
        allow read: if true;
        allow write: if true;
      }
      match /schedule/{day} {
        allow read: if true;
        allow write: if isEventAdmin(event);
      }
      match /users/{eventUser} {
        allow read: if true;
        allow write: if true;
      }
      match /subscriptions/{subscriptionId} {
        allow read: if true;
        allow write: if true;
      }
    }
  }
}